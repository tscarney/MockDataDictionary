{
    "extends": "airbnb-base",
    "rules" : {
      "import/no-extraneous-dependencies": ["off"],
      "max-len" : ["error", {
        "ignoreComments": true,
        "code" : 120
      }],
      "comma-dangle": ["error", {
        "arrays": "only-multiline",		
        "objects": "only-multiline",		
        "imports": "only-multiline",		
        "exports": "only-multiline",
        "functions": "ignore"
      }]
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "parser": "babel-eslint",
    "plugins": [
        "mocha"
    ],
    "env" : {
      "mocha" : true
    }
}
